; the bar section
(defwindow topbar
           :monitor 0
           :geometry (geometry :x "0%"
                               :y "20px"
                               :width "90%"
                               :height "20px"
                               :anchor "top center")
           :stacking "fg"
           :exclusive true
           :focusable false
           :reserve (struts :distance "40px" :side "top")
           :windowtype "dock"
           :wm-ignore false
            (labeled-container :name "foo"
                (button :onclick "notify-send hey ho"
                    "click me"
                )
                (greeter :name "amir")
            )

)

(defwidget labeled-container [name]
    (box :class "container"
     name
        (box :class "first" (children :nth 0))
        (box :class "second" (children :nth 1))

    )
)

(defwidget greeter [?text name]
    (box :orientation "horizontal"
        :halign "center"
        text
        (button :onclick "notify-send 'hello' 'hello,${name}'" "Greet")
    )
)


