;;;;;;
;;;;;; windows
;;;;;;

(defwindow topbar
	:monitor 0
	:geometry (geometry :x "0%"
		:y "20px"
		:width "90%"
		:height "20px"
		:anchor "top center"
	)
	:stacking "fg"
	:exclusive true
	:focusable false
	:reserve (struts :distance "40px" :side "top")
	:windowtype "dock"
	:wm-ignore false
	ws
)

;;;;;;
;;;;;; widgets
;;;;;;


(defwidget workspace
	(box :class "workspace")
	ws
)

;;;;;;
;;;;;; variables
;;;;;;

(deflisten ws
	:initial "_________"
	`hyprgo -w`
)